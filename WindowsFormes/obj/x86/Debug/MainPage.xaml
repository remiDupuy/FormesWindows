<Page
    x:Class="WindowsFormes.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsFormes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Black" Margin="0">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <StackPanel Padding="20,20,0,0" Margin="0" VerticalAlignment="Center">
                <StackPanel VerticalAlignment="Top" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
                    <TextBlock x:ConnectionId='23' x:Name="lblForme" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Forme :" VerticalAlignment="Center" FontSize="30" Margin="0,0,20,0"/>
                    <ComboBox x:ConnectionId='24' x:Name="cbxForme" Height="46" Width="166" VerticalAlignment="Center"                                             >
                        <ComboBoxItem Content="Rectangle" IsSelected="True"/>
                        <ComboBoxItem Content="Cercle"/>
                    </ComboBox>


                </StackPanel>
                <StackPanel VerticalAlignment="Top" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
                    <TextBlock x:ConnectionId='21' x:Name="lblInnerColor" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Couleur intérieure :" VerticalAlignment="Center" FontSize="30" Margin="0,0,20,0"/>
                    <ComboBox x:ConnectionId='22' x:Name="cbxInnerColor" Height="49" Width="177" VerticalAlignment="Center" ItemsSource="{Binding}" SelectedValuePath="Brush" DisplayMemberPath="Libelle"/>
                </StackPanel>
                <StackPanel VerticalAlignment="Top" Orientation="Horizontal" HorizontalAlignment="Left" Width="575" Margin="0,0,0,20">
                    <TextBlock x:ConnectionId='19' x:Name="lblExternColor" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Couleur externe :" VerticalAlignment="Center" FontSize="30" Margin="0,0,20,0"/>
                    <ComboBox x:ConnectionId='20' x:Name="cbxExternColor" Height="45" Width="208" VerticalAlignment="Center" HorizontalAlignment="Left" ItemsSource="{Binding}" SelectedValuePath="Brush" DisplayMemberPath="Libelle"/>



                </StackPanel>
                <StackPanel x:ConnectionId='13' x:Name="inputs" Height="36" Orientation="Horizontal" Margin="0,0,0,20">
                    <StackPanel x:ConnectionId='15' x:Name="height" Width="201" Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock TextWrapping="Wrap" Text="Height :" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBox x:ConnectionId='18' x:Name="txtHeight" TextWrapping="Wrap" Text="" Width="126"/>
                    </StackPanel>
                    <StackPanel x:ConnectionId='16' x:Name="width" Width="260" Orientation="Horizontal" Margin="0,0,0,0.333">
                        <TextBlock TextWrapping="Wrap" Text="Width :" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBox x:ConnectionId='17' x:Name="txtWidth" TextWrapping="Wrap" Text="" Width="145"/>
                    </StackPanel>
                </StackPanel>
                <Button x:ConnectionId='14' x:Name="btnValider" Content="Valider" HorizontalAlignment="Left" VerticalAlignment="Stretch" Padding="100,4"                         />
            </StackPanel>
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Padding="0,20,0,0" Margin="0">
                    <TextBlock TextWrapping="Wrap" Text="Type de transformation :" Margin="0" FontSize="30                            "/>
                    <ComboBox x:ConnectionId='12' x:Name="cbxTransform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="252" Height="52"                                             >
                        <ComboBoxItem Content="Rotate"/>
                        <ComboBoxItem Content="Translate"/>
                        <ComboBoxItem Content="Scale"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel x:ConnectionId='2' x:Name="stackRotate" Orientation="Horizontal" VerticalAlignment="Top" Padding="0,20,0,0" Margin="0" Visibility="Collapsed">
                    <TextBlock TextWrapping="Wrap" Text="Degré de la rotation" Margin="0" FontSize="30                            "/>
                    <TextBox x:ConnectionId='11' x:Name="txtRotate" TextWrapping="Wrap" Text="" Width="304" Height="52"/>
                </StackPanel>
                <StackPanel x:ConnectionId='3' x:Name="stackTranslateVert" Orientation="Horizontal" VerticalAlignment="Top" Padding="0,20,0,0" Margin="0" Visibility="Collapsed">
                    <TextBlock TextWrapping="Wrap" Text="Déplacement vertical :" Margin="0" FontSize="30                            "/>
                    <TextBox x:ConnectionId='10' x:Name="txtTranslateVert" TextWrapping="Wrap" Text="" Width="304" Height="52"/>
                </StackPanel>
                <StackPanel x:ConnectionId='4' x:Name="stackTranslateHor" Orientation="Horizontal" VerticalAlignment="Top" Padding="0,20,0,0" Margin="0" Visibility="Collapsed">
                    <TextBlock TextWrapping="Wrap" Text="Déplacement horizontal:" Margin="0" FontSize="30                            "/>
                    <TextBox x:ConnectionId='9' x:Name="txtTranslateHor" TextWrapping="Wrap" Text="" Width="304" Height="52"/>
                </StackPanel>
                <StackPanel x:ConnectionId='5' x:Name="stackScaleVert" Orientation="Horizontal" VerticalAlignment="Top" Padding="0,20,0,0" Margin="0" Visibility="Collapsed">
                    <TextBlock TextWrapping="Wrap" Text="Echelle verticale :" Margin="0" FontSize="30                            "/>
                    <TextBox x:ConnectionId='8' x:Name="txtScaleVert" TextWrapping="Wrap" Text="" Width="304" Height="52"/>
                </StackPanel>
                <StackPanel x:ConnectionId='6' x:Name="stackScaleHor" Orientation="Horizontal" VerticalAlignment="Top" Padding="0,20,0,0" Margin="0" Visibility="Collapsed">
                    <TextBlock TextWrapping="Wrap" Text="Echelle horizontale :" Margin="0" FontSize="30                            "/>
                    <TextBox x:ConnectionId='7' x:Name="txtScaleHor" TextWrapping="Wrap" Text="" Width="304" Height="52"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <Grid x:ConnectionId='1' x:Name="grille" Margin="20,307,0,0"/>
    </Grid>
</Page>

